<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/blue_A1L80"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/qrVoucherItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15sp">

            <TextView
                android:id="@+id/qrVoucherItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Title"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/qrVoucherItemDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Details"
                android:textSize="16sp"
                android:layout_below="@id/qrVoucherItemTitle" />

            <TextView
                android:id="@+id/qrVoucherItemExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                android:textColor="@color/blue_A1L40"
                android:layout_below="@id/qrVoucherItemDetails"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>