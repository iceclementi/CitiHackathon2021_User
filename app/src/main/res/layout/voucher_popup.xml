<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/voucherPopupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/voucherPopupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20 OFF"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:letterSpacing="0.2"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/voucherPopupDetails"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="WITH MINIMUM SPENDING OF $200"
                android:textSize="14sp"
                android:textAlignment="center"
                android:letterSpacing="0.2"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="2dp"
                android:background="@color/blue_A1L80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COST"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/voucherPopupCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="2dp"
                android:background="@color/blue_A1L60">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOYALTY BONUS"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/voucherPopupLoyalty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5LP"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="2dp"
                android:background="@color/blue_A1L40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VALID FOR"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/voucherPopupExpiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 DAYS"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/voucherPopupTnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TERMS &amp; CONDITIONS"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/voucherPopupPurchaseButton"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:text="PURCHASE"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:backgroundTint="@null"
                    android:background="@drawable/positive_button_style"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voucherPopupCancelButton"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:text="CANCEL"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:backgroundTint="@null"
                    android:background="@drawable/negative_button_style"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>