<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/qrCodePopupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/qrCodePopupCode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/qrCodePopupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20 OFF"
                android:textStyle="bold"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:letterSpacing="0.2"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/qrCodePopupDetails"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="WITH MINIMUM SPENDING OF $200"
                android:textSize="14sp"
                android:textAlignment="center"
                android:letterSpacing="0.2"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp" />

            <TextView
                android:id="@+id/qrCodePopupExpiry"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="EXPIRY DATE"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:letterSpacing="0.2"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp" >

                <Button
                    android:id="@+id/qrCodePopupClaimButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Claim"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    android:background="@drawable/positive_button_style"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/qrCodePopupCancelButton"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    android:background="@drawable/negative_button_style"
                    android:layout_gravity="center" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>